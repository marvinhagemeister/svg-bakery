{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "mocha tests",
      "protocol": "inspector",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "--compilers",
        "ts:ts-node/register",
        "--no-timeouts",
        "--colors",
        "${workspaceRoot}/src/**/__tests__/*.spec.ts"
      ],
      "stopOnEntry": false,
      "cwd": "${workspaceRoot}",
      "skipFiles": ["node_modules/**/*.js", "<node_internals>/**/*.js"]
    }
  ]
}
