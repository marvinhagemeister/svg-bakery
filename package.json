{
  "name": "svg-bakery",
  "version": "0.5.3",
  "description": "Quickly generate svg sprites",
  "bin": {
    "svg-bakery": "dist/bin.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:marvinhagemeister/svg-bakery.git"
  },
  "main": "dist/index.js",
  "author": "Marvin Hagemeister <marvin@marvinhagemeister.de>",
  "license": "MIT",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist/",
    "lint": "tslint 'src/**/*.ts'",
    "watch": "tsc -w",
    "build": "npm run clean && tsc",
    "test": "mocha --watch-extensions svg --compilers ts:ts-node/register --timeout=4000 'src/**/__tests__/*.spec.ts'",
    "test-watch": "npm t -- -w -R min",
    "coverage": "nyc npm t",
    "prepublishOnly": "npm run lint && npm t && npm run build"
  },
  "dependencies": {
    "@types/chalk": "^0.4.31",
    "@types/commander": "^2.9.1",
    "@types/xml2js": "^0.4.0",
    "chalk": "^2.0.1",
    "commander": "^2.11.0",
    "nicer-fs": "^1.1.1",
    "svg-sprite": "^1.3.7",
    "vdom-utils": "^0.3.0",
    "xml2js": "^0.4.17"
  },
  "devDependencies": {
    "@types/chai": "^4.0.1",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.17",
    "@types/sinon": "^2.3.3",
    "@types/svg-sprite": "^0.0.30",
    "chai": "^4.1.0",
    "mocha": "^3.4.2",
    "nyc": "^11.1.0",
    "rimraf": "^2.6.1",
    "sinon": "^3.2.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.5.0",
    "tslint-config-sevenval": "^0.6.3",
    "typescript": "^2.4.2"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "node_modules/",
      "**/__tests__/**",
      "__tests__/**",
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "text",
      "text-summary",
      "lcovonly"
    ],
    "all": true
  }
}
